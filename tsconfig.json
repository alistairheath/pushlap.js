{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "strict": true,
      "esModuleInterop": true,
      "declaration": true,
      "declarationDir": "./dist/types",
      "sourceMap": true,
      "outDir": "./dist",
      "moduleResolution": "node",
      "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }